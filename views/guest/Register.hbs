<!-- code the body -->
<div class="container pt-5">
    <div class="logo"></div>
    <form action="/register" method="POST" id="form-register">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="name" class="form-control" id="inputName" name="name" placeholder="Họ và tên" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputBirthday" class="col-sm-2 col-form-label">Birthday</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="inputBirthday" name="birthday" placeholder="Ngày sinh" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputAddress" class="col-sm-2 col-form-label">Adress</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputAddress" name="address" placeholder="Địa chỉ" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password" required>
            </div>
        </div>
        <div class="form-group row">
            {{{captcha}}}
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>
</div>
{{!-- capchaa --}}
<script src='https://www.google.com/recaptcha/api.js?hl=vi'></script>
<!-- #content end -->
{{#section 'footer'}}
<script>
    $("#inputEmail").on('blur', function(){
        var email = $('#inputEmail').val();
        $.post('/validateEmail', {email:email}, (data,status)=>{
            if(data.valid)
                $("#inputEmail").attr('class','form-control border-success')
            else
                $("#inputEmail").attr('class','form-control border-danger')
        })

    });
    $("#form-register").submit(function(e){
        if($("#inputEmail").attr('class')==="form-control border-success")
            return true;
        else    
            $("#inputEmail").focus();
        return false;
    })
</script>
{{/section}}