                        ============================================= -->
                        <div class="product-price">Current price: {{product.price}}</div>
                        <!-- Product Single - Price End -->

                        <!-- Product Single - Rating
                        ============================================= -->
                        <div class="product-rating">
                            <p style="display: none">{{product.id}}</p>
                            <a href="#" id="add"><i class="icon-heart"></i></a>
                        </div>
                        <!-- Product Single - Rating End -->
                        <div class="clear"></div>
                        <div class="line"></div>
