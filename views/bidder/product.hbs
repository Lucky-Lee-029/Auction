{{#section "footer"}}
<script>
    $('#form-bid').submit((e)=>{
        var kq = confirm("Are you sure to bid?");
        if(kq) return true;
        return false;
    });
    {{#if bidError}}
        alert('{{errorMessage}}')
    {{/if}}

    $('#add').on('click', function(){
        var div =$(this).parents('div').first();
        var child= div.children();
        var id=parseInt(child[0].innerHTML);
        $.post('/wishlist/add', {id:id});
        div.remove();
    })
</script>
