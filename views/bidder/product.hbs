                                ============================================= -->
                                <h4>{{product.name}}</h4>
                                {{#if allowToBid}}
                                <form action="/bidder/bid" method="POST" id="form-bid">
                                    <div class="form-group">
                                        <h1>Price</h1>
                                        <input type="number" class="form-control w-100" {{#if product.step}}step="{{product.step}}"{{/if}} id="inputPrice" name="price" value="{{suggestions}}" min="product.price">
                                    </div>
                                    <div class="form-group">
                                        <h1>Price end</h1>
                                        <input type="number" class="form-control w-100" {{#if product.step}}step="{{product.step}}"{{/if}} id="inputPrice" name="price_end">
                                    </div>
                                    <input class="d-none"  name="productId" value="{{product.id}}">
                                    <button type="submit" class="btn btn-primary col-3">Bid</button>
                                </form>
                                {{/if}}
                                <h5>Buy now: {{product.buy_now}}</h5>
                                <h5>Seller: {{maskName product.seller_name}}</h5>
                                <h5>Seller's rating: {{product.seller_review}}  <a href="#" class="ml-auto">  Chi tiáº¿t</a></h5>
                                {{#if product.hasWinner}}
                                <h5>Bid Times: {{product.bidTimes}}</h5>
                                <h5>Current Winner: {{maskName product.winner_name}}</h5>
                                <h5>Winner rating: {{product.winner_review}}</h5>
                                {{/if}}
                                <h5>Post date: {{formatTime product.created_at}}</h5>
                                <h5>{{product.end_time}}</h5>
                                <!-- Product Single - Short Description End -->

                                <!-- Product Single - Meta
								============================================= -->
                                <div class="card product-meta mt-5">
                                    <div class="card-body">
                                        <span itemprop="productID" class="sku_wrapper">SKU: <span class="sku">8465415</span></span>
                                        <span class="posted_in">Category: <a href="#" rel="tag">Dress</a>.</span>
                                    </div>
                                </div>
                                <!-- Product Single - Meta End -->

                                <!-- Product Single - Share
								============================================= -->
                                <div class="si-share noborder clearfix">
